<div class="container mx-auto p-4">
  <h2 class="text-xl font-bold">Checkout</h2>
  <%= form_with url: orders_path, method: :post, local: true do |f| %>
    <div id="order-items">
      <div class="order-item">
        <%= select_tag "order_items[][menu_id]", options_from_collection_for_select(Menu.all, :id, :name), class: "border p-2" %>
        <%= number_field_tag "order_items[][quantity]", 1, class: "border p-2", min: 1 %>
      </div>
    </div>
    <button type="button" onclick="addItem()" class="bg-green-500 text-white p-2 rounded">Tambah Item</button>

    <%= submit_tag "Bayar Sekarang", class: "bg-blue-500 text-white p-2 rounded" %>
  <% end %>
</div>

<script>
  function addItem() {
    let container = document.getElementById("order-items");
    let newItem = document.querySelector(".order-item").cloneNode(true);
    container.appendChild(newItem);
  }
</script>
