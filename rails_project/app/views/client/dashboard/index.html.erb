<h1>Client Dashboard</h1>

<div class="dashboard">
  <h2>Welcome to Your Dashboard</h2>
  <p>Here you can view your orders and manage your account.</p>

  <div class="orders">
    <h3>Your Orders</h3>
    <%= link_to 'Create New Order', new_client_order_path, class: 'btn btn-primary' %>
    <ul>
      <% @orders.each do |order| %>
        <li>
          Order ID: <%= order.id %> - Status: <%= order.status %>
          <%= link_to 'View', client_order_path(order) %>
        </li>
      <% end %>
    </ul>
  </div>
</div>